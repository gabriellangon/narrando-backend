# =============================================================================
# CONFIGURATION NARRANDO - Variables d'environnement
# =============================================================================

# APIs externes pour la récupération de données touristiques
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
MAPBOX_API_KEY=your_mapbox_api_key_here
OPENTRIPMAP_API_KEY=your_opentripmap_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
FOURSQUARE_API_KEY=your_foursquare_api_key_here

# =============================================================================
# TEXT-TO-SPEECH CONFIGURATION
# =============================================================================

# Choix du provider TTS: 'openai' ou 'elevenlabs' (défaut: openai)
TTS_PROVIDER=openai

# Configuration OpenAI TTS (si TTS_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_VOICE=nova
# Mapping optionnel langue -> voix (ex: en=nova,fr=nova,es=alloy)
OPENAI_VOICE_MAP=

# Configuration ElevenLabs (si TTS_PROVIDER=elevenlabs)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=Jxxxx
# Mapping optionnel langue -> voice_id
ELEVENLABS_VOICE_MAP=

# Configuration Supabase pour le stockage des données
SUPABASE_URL=xxxxx
SUPABASE_ANON_KEY=xxxx
SUPABASE_SERVICE_KEYxxxxxxx

# Configuration de l'API mobile
MOBILE_API_PORT=5000
MOBILE_API_HOST=0.0.0.0

# Configuration par défaut pour la génération d'itinéraires
DEFAULT_MAX_ATTRACTIONS=15
DEFAULT_WALKING_MODE=true
DEFAULT_INDIVIDUAL_FILTERING=true